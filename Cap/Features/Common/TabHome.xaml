<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cap.TabHome"
    xmlns:main="clr-namespace:Cap"
    Shell.PresentationMode="ModalAnimated">
    <TabBar>
        <Tab
            Style="{StaticResource Tab}"
            Title="Trang chủ"
            Icon="home_icon.svg">
            <ShellContent
                ContentTemplate="{DataTemplate main:HomeBasePage}" />
        </Tab>
        <Tab
            Style="{StaticResource Tab}"
            Title="Trò chuyện"
            Icon="chat_icon.svg">
            <ShellContent
                ContentTemplate="{DataTemplate main:ChatPage}" />
        </Tab>
    </TabBar>
</Shell>
